{
  "template": "## What's Changed\n\n$CHANGES\n\n**Full Changelog**: https://github.com/$OWNER/$REPO/compare/$FROM_TAG...$TO_TAG",
  "categories": [
    {
      "title": "🚀 New Features",
      "labels": ["feat", "feature", "enhancement"]
    },
    {
      "title": "🐛 Bug Fixes", 
      "labels": ["fix", "bugfix", "bug"]
    },
    {
      "title": "📱 Mobile",
      "labels": ["mobile", "android", "ios"]
    },
    {
      "title": "🦀 Rust Core",
      "labels": ["core", "rust", "ffi"]
    },
    {
      "title": "🤖 AI Integration",
      "labels": ["ai", "llm", "ml"]
    },
    {
      "title": "🎨 UX/UI",
      "labels": ["ux", "ui", "design"]
    },
    {
      "title": "📚 Documentation",
      "labels": ["docs", "documentation"]
    },
    {
      "title": "🔧 Infrastructure",
      "labels": ["infra", "ci", "cd", "docker", "deployment"]
    },
    {
      "title": "⚡ Performance",
      "labels": ["perf", "performance", "optimization"]
    },
    {
      "title": "🧪 Testing",
      "labels": ["test", "testing"]
    },
    {
      "title": "🔒 Security",
      "labels": ["security", "vulnerability"]
    },
    {
      "title": "♻️ Refactoring",
      "labels": ["refactor", "refactoring", "cleanup"]
    },
    {
      "title": "🏗️ Build System",
      "labels": ["build", "deps", "dependencies"]
    },
    {
      "title": "🧹 Maintenance",
      "labels": ["chore", "maintenance"]
    }
  ],
  "ignore_labels": [
    "ignore-for-release",
    "duplicate",
    "question",
    "invalid",
    "wontfix"
  ],
  "sort": "ASC",
  "template_variables": {
    "CHANGES": "$CATEGORIES",
    "UNCATEGORIZED": "## Other Changes\n\n$UNCATEGORIZED"
  },
  "max_tags_to_fetch": 200,
  "max_pull_requests": 1000,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": [
    "main",
    "master",
    "develop"
  ],
  "tag_resolver": {
    "method": "sort",
    "filter": {
      "pattern": "^v?\\d+\\.\\d+\\.\\d+.*$"
    }
  },
  "custom_placeholders": [
    {
      "name": "MIGRATION_NOTES",
      "source": "migration_notes.md",
      "transformer": "upper-case"
    }
  ]
}