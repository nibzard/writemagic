{
  "name": "writemagic-web-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for WriteMagic web application",
  "scripts": {
    "test": "node run-all-tests.js",
    "test:unit": "jest --config=jest.unit.config.js",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:performance": "node performance/runner.js",
    "test:offline": "node offline/runner.js",
    "test:ai": "jest --config=jest.ai.config.js",
    "test:browsers": "playwright test --config=playwright.browsers.config.js",
    "test:build": "node build/build-validation.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:report": "node utils/report-generator.js",
    "test:all": "node run-all-tests.js",
    "test:unit-only": "node run-all-tests.js --unit-only",
    "test:e2e-only": "node run-all-tests.js --e2e-only",
    "test:performance-only": "node run-all-tests.js --performance-only",
    "test:offline-only": "node run-all-tests.js --offline-only",
    "test:ai-only": "node run-all-tests.js --ai-only",
    "test:browser-only": "node run-all-tests.js --browser-only",
    "test:build-only": "node run-all-tests.js --build-only",
    "serve:test": "http-server ../public -p 8080",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint **/*.js --fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "eslint": "^8.50.0",
    "eslint-plugin-jest": "^27.4.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^21.3.0",
    "ws": "^8.14.0"
  },
  "dependencies": {
    "benchmark": "^2.1.4",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "lighthouse": "^11.0.0",
    "performance-observer": "^1.0.0"
  }
}