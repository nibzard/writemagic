{
  "name": "writemagic-web-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for WriteMagic web application",
  "scripts": {
    "test": "node test-runner.js unit",
    "test:unit": "node test-runner.js unit",
    "test:integration": "node test-runner.js integration",
    "test:e2e": "node test-runner.js e2e",
    "test:performance": "node performance/runner.js",
    "test:offline": "node offline/runner.js",
    "test:ai": "node test-runner.js ai",
    "test:browsers": "node test-runner.js playwright",
    "test:build": "node build/build-validation.js",
    "test:watch": "jest --config=jest.unit.config.js --watch",
    "test:coverage": "jest --config=jest.unit.config.js --coverage",
    "test:report": "node utils/report-generator.js",
    "test:all": "node test-runner.js all",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --config=jest.unit.config.js --runInBand --no-cache",
    "serve:test": "http-server ../public -p 8080",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint **/*.js --fix",
    "install:playwright": "npx playwright install",
    "check:config": "node -e \"console.log('Jest config check:', require('./jest.unit.config.js'))\""
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-plugin-jest": "^27.4.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^21.11.0",
    "ws": "^8.14.0"
  },
  "dependencies": {
    "benchmark": "^2.1.4",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "lighthouse": "^11.0.0"
  }
}
